<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="diakonidze.kartlos.voiage" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".AddStatement"
            android:label="@string/title_activity_add_statement" >
        </activity>
        <activity
            android:name=".DetailPageDriver"
            android:label="@string/title_activity_detail_page" >
        </activity>
        <activity
            android:name=".DetailPagePassanger"
            android:label="@string/title_activity_detail_page_passanger" >
        </activity>
        <activity
            android:name=".MyStatements"
            android:label="@string/title_activity_my_statements"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="diakonidze.kartlos.voiage.MainActivity" />
        </activity>
        <activity
            android:name=".FavoriteStatements"
            android:label="@string/title_activity_favorite_statements"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="diakonidze.kartlos.voiage.MainActivity" />
        </activity>
        <activity
            android:name=".EditMyStatement"
            android:label="@string/title_activity_edit_my_statement" >
        </activity>
    </application>

</manifest>
