<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >


    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view_driver"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_margin="10dp"
        card_view:cardCornerRadius="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">



        <ImageView
            android:id="@+id/list1_image"
            android:layout_width="@dimen/list_imig_width"
            android:layout_height="@dimen/list_imig_hiegth"
            android:layout_gravity="left"
            android:src="@drawable/mgz"
            android:scaleType="centerCrop" />

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:padding="@dimen/list_item_padding"
                android:layout_height="match_parent">



        <TextView
            android:id="@+id/list1_city_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="საიდან - სად"
            android:layout_gravity="right|top"
            android:textSize="@dimen/statement_list_title_size"
            android:layout_alignParentTop="true"
            android:layout_alignLeft="@+id/list1_freespace_text"
            android:layout_alignStart="@+id/list1_freespace_text" />

        <TextView
            android:id="@+id/list1_freespace_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_below="@+id/list1_city_text"
            android:layout_marginRight="@dimen/text_margin_in_list"
            android:layout_marginTop="40dp"
            android:text="1000" />

        <TextView
            android:id="@+id/list1_name_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="სახელი გვარი"
            android:layout_below="@+id/list1_city_text"
            android:layout_alignLeft="@+id/list1_city_text"
            android:layout_alignStart="@+id/list1_city_text" />

        <TextView
            android:id="@+id/list1_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:text="10"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/date_color"
            android:layout_alignTop="@+id/imageView"
            android:layout_toLeftOf="@+id/imageView"
            android:layout_toStartOf="@+id/imageView" />

        <TextView
            android:id="@+id/list1_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:text="17.08.2015"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/date_color"
            android:layout_alignTop="@+id/list1_price"
            android:layout_alignLeft="@+id/list1_freespace_text"
            android:layout_alignStart="@+id/list1_freespace_text" />

        <ImageView
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:id="@+id/imageView"
            android:layout_gravity="right|bottom"
            android:src="@drawable/lari"
            android:scaleType="centerInside"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />



            </RelativeLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>



</RelativeLayout>