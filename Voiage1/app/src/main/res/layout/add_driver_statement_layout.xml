<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:id="@+id/add_driver_scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:animateLayoutChanges="true"
            android:divider="@drawable/linedividerhorizontal"
            android:dividerPadding="10dp"
            android:orientation="vertical"
            android:showDividers="middle">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:divider="@drawable/linedivider"
                android:dividerPadding="2dp"
                android:orientation="horizontal"
                android:padding="@dimen/add_statement_inline_padding"
                android:showDividers="middle">

                <TextView
                    android:id="@+id/driver_marshuti_text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="3"
                    android:text="მარშუტი" />

                <AutoCompleteTextView
                    android:id="@+id/driver_cityfrom"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="6"
                    android:hint="საიდან" />


                <AutoCompleteTextView
                    android:id="@+id/driver_cityto"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="6"
                    android:hint="საით" />

                <!--<Spinner-->
                <!--android:id="@+id/driver_cityfrom"-->
                <!--android:layout_width="0dp"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_weight="5"-->
                <!--android:entries="@array/cityes" />-->

                <!--<Spinner-->
                <!--android:id="@+id/driver_cityto"-->
                <!--android:layout_width="0dp"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_weight="5"-->
                <!--android:entries="@array/cityes" />-->

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:divider="@drawable/linedivider"
                android:dividerPadding="2dp"
                android:orientation="horizontal"
                android:padding="@dimen/add_statement_inline_padding"
                android:showDividers="middle">

                <TextView

                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="3"
                    android:text="დრო" />


                <Spinner
                    android:id="@+id/driver_date_spiner"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="6"
                    android:gravity="center"
                    android:text="დღეს" />

                <Spinner
                    android:id="@+id/driver_time_spiner"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="6"
                    android:gravity="center"
                    android:text="00:00" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:divider="@drawable/linedivider"
                android:dividerPadding="2dp"
                android:orientation="horizontal"
                android:padding="@dimen/add_statement_inline_padding"
                android:showDividers="middle">

                <TextView
                    android:id="@+id/driver_freesplace_text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="9"
                    android:text="თავისუფალი ადგილი" />

                <Spinner
                    android:id="@+id/driver_freespace_spiner"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="6"
                    android:gravity="center" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:divider="@drawable/linedivider"
                android:dividerPadding="2dp"
                android:orientation="horizontal"
                android:padding="@dimen/add_statement_inline_padding"
                android:showDividers="middle">

                <TextView
                    android:id="@+id/driver_price_text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="9"
                    android:text="ფასი" />

                <Spinner
                    android:id="@+id/driver_price_spiner"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="6"
                    android:gravity="center"
                    android:textAlignment="center" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/add_statement_inline_padding"
                android:showDividers="middle">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/driver_vehicle_text"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="3"
                        android:text="ა/მანქანა" />

                    <Button
                        android:id="@+id/take_photo_btn"
                        android:background="@android:color/transparent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="add photo" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/car_image"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <Spinner
                        android:id="@+id/driver_marka_spiner"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="4" />

                    <Spinner
                        android:id="@+id/driver_model_spiner"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="4" />

                    <Spinner
                        android:id="@+id/driver_color_spiner"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:entries="@array/veh_color" />
                </LinearLayout>

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:animateLayoutChanges="true"
                android:elevation="6dp"
                android:orientation="horizontal"
                android:padding="@dimen/add_statement_inline_padding">

                <CheckBox
                    android:id="@+id/driver_comfort_checkBox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="სხვა პირობები" />

                <RelativeLayout
                    android:id="@+id/comfort1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/driver_comfort_checkBox"
                    android:animateLayoutChanges="true"
                    android:visibility="gone">


                    <CheckBox
                        android:id="@+id/driver_conditioner_checkBox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="6dp"
                        android:layout_marginTop="6dp"
                        android:text="კონდიციონერი" />

                    <CheckBox
                        android:id="@+id/driver_atplace_checkBox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:layout_toRightOf="@+id/driver_conditioner_checkBox"
                        android:text="ადგილზე მისვლა" />

                    <CheckBox
                        android:id="@+id/driver_cigar_checkBox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/driver_conditioner_checkBox"
                        android:layout_marginBottom="6dp"
                        android:layout_marginLeft="6dp"
                        android:text="სიგარეტი" />

                    <CheckBox
                        android:id="@+id/driver_baggage_checkBox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/driver_conditioner_checkBox"
                        android:layout_toEndOf="@+id/driver_cigar_checkBox"
                        android:text="ბარგი" />

                    <CheckBox
                        android:id="@+id/driver_animal_checkBox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/driver_conditioner_checkBox"
                        android:layout_toEndOf="@+id/driver_baggage_checkBox"
                        android:text="შ.ცხოველები" />

                </RelativeLayout>

            </RelativeLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:animateLayoutChanges="true"
                android:elevation="6dp"
                android:orientation="vertical"
                android:padding="@dimen/add_statement_inline_padding">

                <CheckBox
                    android:id="@+id/driver_passanger_restrict_checkBox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="შეზღუდვა მგზავრზე" />

                <LinearLayout
                    android:id="@+id/driver_passanger_restrict_box"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_marginBottom="6dp"
                    android:layout_marginTop="6dp"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="6"
                        android:orientation="vertical">


                        <TextView
                            android:id="@+id/driver_pass_age_text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginBottom="12dp"
                            android:gravity="center"

                            android:text="ასაკი" />

                        <SeekBar
                            android:id="@+id/driver_pass_age_seek"
                            android:layout_width="match_parent"

                            android:layout_height="wrap_content"

                            android:progress="50"
                            android:splitTrack="false"
                            android:verticalScrollbarPosition="right" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="4"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginBottom="12dp"
                            android:gravity="center"
                            android:text="სქესი" />

                        <Spinner
                            android:id="@+id/driver_sex_spiner"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:entries="@array/passanger_sex"
                            android:gravity="center"

                            android:textAlignment="center" />


                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/add_statement_inline_padding">

                <EditText
                    android:id="@+id/driver_comment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="კომენტარი" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="end"
                android:orientation="horizontal"
                android:padding="@dimen/add_statement_inline_padding">

                <Button
                    android:id="@+id/done_driver"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:text="დადასტურება" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>