<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="@dimen/list_item_padding"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/list1_city_text"
        android:text="საიდან - სად"
        android:textSize="@dimen/statement_list_title_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/list1_name_text"
        android:text="სახელი გვარი"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/list1_city_text"
        android:layout_toRightOf="@+id/list1_image"
        android:layout_marginLeft="@dimen/gap_from_image"/>

    <TextView
        android:id="@+id/list1_freespace_text"
        android:text="1000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/list1_city_text"
        android:layout_alignParentRight="true"
        />

    <ImageView
        android:layout_width="@dimen/list_imig_width"
        android:layout_height="@dimen/list_imig_hiegth"
        android:id="@+id/list1_image"
        android:layout_alignTop="@+id/list1_city_text"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#ff56dcff" />

    <TextView
        android:id="@+id/list1_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="17.08.2015"
        android:layout_marginLeft="@dimen/gap_from_image"
        android:layout_alignBottom="@+id/list1_image"
        android:layout_toRightOf="@+id/list1_image"
        android:layout_toEndOf="@+id/list1_image"
        android:layout_marginBottom="23dp"
        android:textColor="@color/date_color" />

    <TextView
        android:id="@+id/list1_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="10L"
        android:textColor="@color/date_color"
        android:layout_alignTop="@+id/list1_date"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>