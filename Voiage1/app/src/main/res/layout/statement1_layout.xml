<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/list_item_padding">


    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_gravity="center"
        card_view:cardCornerRadius="14dp">

        <TextView
            android:id="@+id/list1_city_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:text="საიდან - სად"
            android:textSize="@dimen/statement_list_title_size" />

        <TextView
            android:id="@+id/list1_name_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/list1_city_text"
            android:layout_marginLeft="@dimen/gap_from_image"
            android:layout_toRightOf="@+id/list1_image"
            android:text="სახელი გვარი" />

        <TextView
            android:id="@+id/list1_freespace_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/list1_city_text"
            android:text="1000" />

        <ImageView
            android:id="@+id/list1_image"
            android:layout_width="@dimen/list_imig_width"
            android:layout_height="@dimen/list_imig_hiegth"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/list1_city_text"
            android:background="#ff56dcff" />

        <TextView
            android:id="@+id/list1_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/list1_image"
            android:layout_marginBottom="23dp"
            android:layout_marginLeft="@dimen/gap_from_image"
            android:layout_toEndOf="@+id/list1_image"
            android:layout_toRightOf="@+id/list1_image"
            android:text="17.08.2015"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/date_color" />

        <TextView
            android:id="@+id/list1_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/list1_date"
            android:text="10L"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/date_color" />


    </android.support.v7.widget.CardView>

</RelativeLayout>